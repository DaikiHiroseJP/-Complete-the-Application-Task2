<h1>Books</h1>

<% @books.each do |book| %>

  <p><span>Title</span></p>
  <%= book.title %>

  <p><span>Body</span></p>
  <%= book.body %>

  <%= link_to 'Show', "/books/#{book.id}" %>

  <%= link_to 'Edit', book_path(book.id) %>

  <%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>


<% end %>