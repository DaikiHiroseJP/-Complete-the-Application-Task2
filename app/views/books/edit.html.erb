<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>


  <div class="field">
    <label for="book_title">Title</label><br>
    <input class="book_title" type="text" <%= f.text_field :title %>
  </div>

  <div class="field">
    <label for="book_body">Body</label><br>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
  <%= link_to 'Show', "/books/#{@book.id}" %> |
  <%= link_to 'Back', "/books" %>
<% end %>
